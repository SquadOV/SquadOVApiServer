[fusionauth]
host = "http://internal-fusionauth-service"
port = 9011
api_key = "${FUSIONAUTH_API_KEY}"
tenant_id = "${FUSIONAUTH_TENANT_ID}"
application_id = "${FUSIONAUTH_CLIENT_ID}"

[database]
url = "${DATABASE_URL}"
connections = 256
heavy_connections = 128

[cors]
domain = "https://app.${DEPLOYMENT_DOMAIN}"

[gcp]
enabled = true
