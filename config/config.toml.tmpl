[riot.lol_api_key.burst_limit]
requests = 500
seconds = 10
enabled = true

[riot.lol_api_key.bulk_limit]
requests = 30000
seconds = 600
enabled = true

[riot.tft_api_key]
key = "${TFT_API_KEY}"

[riot.tft_api_key.burst_limit]
requests = 500
seconds = 10
enabled = true

[riot.tft_api_key.bulk_limit]
requests = 30000
seconds = 600
enabled = true

[twitch]
