wow_combat_log_topic = "wow_combat_logs"

[kafka.client_keypair]
key = "${KAFKA_CLIENT_KEY}"
secret= "${KAFKA_CLIENT_SECRET}"

[kafka.server_keypair]
key = "${KAFKA_SERVER_KEY}"
secret= "${KAFKA_SERVER_SECRET}"

[vod]
