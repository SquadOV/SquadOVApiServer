rso_client_secret = "${RSO_CLIENT_SECRET}"

[riot.rso_api_key]
key = "${RSO_API_KEY}"

[riot.rso_api_key.burst_limit]
requests = 10
seconds = 10
enabled = false

[riot.rso_api_key.bulk_limit]
requests = 500
seconds = 600
enabled = false

[riot.valorant_api_key]
key = "${VALORANT_API_KEY}"

[riot.valorant_api_key.burst_limit]
requests = 500
seconds = 10
enabled = true

[riot.valorant_api_key.bulk_limit]
requests = 30000
seconds = 600
enabled = true

[riot.lol_api_key]
